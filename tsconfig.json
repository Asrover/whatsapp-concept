{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "typeRoots": ["node_modules/@types", "./src/types"],
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "./src/**/**/*"
  ]
}